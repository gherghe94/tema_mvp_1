<Window x:Class="MVP1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MVP1"
        mc:Ignorable="d"
        Title="Login" Height="250" Width="600">
    <DockPanel LastChildFill="True">
        <DockPanel DockPanel.Dock="Top" Margin="10">
            <TextBlock Text="User" Margin="10"/>
            <TextBox Text="{Binding Username}" Margin="10"/>
        </DockPanel>
        <DockPanel DockPanel.Dock="Top" Margin="10">
            <TextBlock Text="Pin " Margin="10"/>
            <TextBox Text="{Binding Pin}" Margin="10"/>
        </DockPanel>
        <DockPanel DockPanel.Dock="Top" Margin="10">
            <Button Command="{Binding LoginCommand}" Margin="10"
                    Content="LOGIN"/>
        </DockPanel>
    </DockPanel>
</Window>
